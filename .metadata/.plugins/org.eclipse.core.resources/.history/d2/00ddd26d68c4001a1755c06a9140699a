package forLoopsExercise;
import java.util.Scanner;
public class Q11 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for(int i=1 ; i<=n ; i++) {
			for(int j=0 ; j<= n-i ; j++) {
				System.out.print("  ");
			}
			System.out.print("1   ");
			System.out.println();
		}
		
	}

}
