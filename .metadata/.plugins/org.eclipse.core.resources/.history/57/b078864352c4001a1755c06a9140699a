package forLoopsExercise;
import java.util.Scanner;

public class Q8 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for(int i=1 ; i<= n ; i++) {
			for(int j =1; j<= n-i ; j++) {
				System.out.print("  ");
			}
			if(i>=2) {
			for(int j=1 ; j<=i-1 ; j++) {
				int k = n-i+1;
				System.out.print(k++ +" ");
			}
		}
			System.out.println();
		}
		
	}

}
